<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:endColor="#009966"
                android:startColor="#009999"
                android:angle="270" />
<!--            <stroke
                android:width="2dp"
                android:color="#B0B0B0" />-->
            <corners
                android:radius="3dp" />
            <padding
                android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp" />
        </shape>
    </item>

    <item android:state_enabled="false" >
        <shape>
            <gradient
                android:startColor="#585858"
                android:endColor="#585858"
                android:angle="270" />
<!--            <stroke
                android:width="2dp"
                android:color="#B0B0B0" />-->
            <corners
                android:radius="3dp" />
            <padding
                android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:startColor="#006666"
                android:endColor="#009966"
                android:angle="270" />
<!--            <stroke
                android:width="2dp"
                android:color="#B0B0B0" />-->
            <corners
                android:radius="3dp" />
            <padding
                android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp" />
        </shape>
    </item>
</selector>